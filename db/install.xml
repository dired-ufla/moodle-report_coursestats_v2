<?xml version="1.0" encoding="UTF-8" ?>

<xmldb>
    <TABLES>
        <!-- Tabela report_coursestats_categories -->
        <TABLE NAME="report_coursestats_categories" COMMENT="Tabela para armazenar categorias de estatísticas dos cursos">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <!-- Tabela report_coursestats_courses -->
        <TABLE NAME="report_coursestats_courses" COMMENT="Tabela para armazenar cursos e associar às categorias de estatísticas">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="coursestats_category_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="foreign" TYPE="foreign" FIELDS="coursestats_category_id" REFTABLE="report_coursestats_categories" REFFIELDS="id" ONDELETE="cascade"/>
            </KEYS>
        </TABLE>
    </TABLES>
</xmldb>
